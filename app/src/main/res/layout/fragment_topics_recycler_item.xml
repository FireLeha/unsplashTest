<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemContainer"
    android:layout_width="match_parent"
    android:layout_height="300dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/topicCoverPhoto"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/viewId"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="@id/topicCoverPhoto"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/topicId"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"    />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/topicTitle"
        tools:text="Wallpapers"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_margin="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/topicCoverPhoto"
        app:layout_constraintTop_toTopOf="@id/viewId"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/topicDescription"
        tools:text="From epic drone shots to inspiring moments in nature â€” submit your best desktop and mobile backgrounds."
        android:textSize="13sp"
        android:textColor="#000"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/viewId"
        app:layout_constraintStart_toStartOf="@id/viewId"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/topicTotalPhotosCount"
        tools:text="118 contributions"
        android:textSize="13sp"
        android:textColor="#000"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/viewId"
        app:layout_constraintBottom_toBottomOf="@id/viewId"/>


</androidx.constraintlayout.widget.ConstraintLayout>